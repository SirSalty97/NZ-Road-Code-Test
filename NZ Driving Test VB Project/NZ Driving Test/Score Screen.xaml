<Window x:Class="Score_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NZ_Driving_Test"
        mc:Ignorable="d"
        Title="Score_Screen" Height="300" Width="300">
    <Grid Loaded="Grid_Loaded">
        <Label x:Name="lblHi" Content="Hi [name]!" HorizontalAlignment="Left" Margin="85,48,0,0" VerticalAlignment="Top" Height="44" Width="116" FontSize="16"/>
        <Label x:Name="lblScore" Content="Your Score:  0/0" HorizontalAlignment="Left" Margin="63,97,0,0" VerticalAlignment="Top" Height="44" Width="153" FontSize="20"/>
        <Label x:Name="lblPass" Content="You've [passed/failed]!" HorizontalAlignment="Left" Margin="55,162,0,0" VerticalAlignment="Top" Height="44" Width="186"/>

    </Grid>
</Window>
